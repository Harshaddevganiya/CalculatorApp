<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputttext"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_above="@+id/outputtext"
        android:layout_marginBottom="-2dp"
        android:gravity="right"
        android:textColor="@color/black"
        android:paddingRight="10dp"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/outputtext"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/ll1"
        android:layout_marginBottom="13dp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textSize="100sp" />


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:layout_marginStart="20dp"
                android:visibility="invisible" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:layout_marginStart="20dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_ac"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_ac"/>

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="5dp"
                android:id="@+id/btn_div"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_div"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_7"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_7"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_8"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_8"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_9"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_9"/>

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="5dp"
                android:id="@+id/btn_multi"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_multi"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_4"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_4"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_5"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_5"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_6"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_6"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:id="@+id/btn_sub"
                android:background="@drawable/btn_sub"
                android:padding="5dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_1"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_2"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_2"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_3"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_3"/>

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="5dp"
                android:layout_marginStart="20dp"
                android:id="@+id/btn_add"
                android:background="@drawable/btn_add"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:visibility="invisible"
                android:layout_marginStart="20dp" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_0"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_0"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_dot"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_dot"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:id="@+id/btn_equal"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_equal"/>


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>